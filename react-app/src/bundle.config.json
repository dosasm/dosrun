{
    "$comment": "Configurations for jsdos bundle and their usage",
    "profiles": [
        {
            "label": "MASM 5.00",
            "description": "Microsoft Macro Assembler with MASM.exe 5.00 link.exe 3.60",
            "baseBundle": "/bundles/MASM.jsdos",
            "CodeLanguage": "asm6502",
            "CodePath": "code/hello.asm",
            "actions": [
                {
                    "label": "run",
                    "zh-cn": "运行代码",
                    "CodeDestination": "test/test.asm",
                    "command": [
                        "mount c ./",
                        "mount d ./test/",
                        "set PATH=C:\\masm;%PATH%",
                        "d:",
                        "masm test.asm;",
                        "link test.obj;",
                        "test.exe"
                    ]
                },
                {
                    "label": "debug",
                    "zh-cn": "使用debug调试",
                    "CodeDestination": "test/test.asm",
                    "command": [
                        "mount c ./",
                        "mount d ./test/",
                        "set PATH=C:\\masm;%PATH%",
                        "d:",
                        "masm test.asm;",
                        "link test.obj;",
                        "debug test.exe"
                    ]
                },
                {
                    "label": "list",
                    "zh-cn": "生成lst文件",
                    "CodeDestination": "test/test.asm",
                    "command": [
                        "mount c ./",
                        "mount d ./test/",
                        "set PATH=C:\\masm;%PATH%",
                        "d:",
                        "masm /la test.asm;"
                    ]
                }
            ]
        },
        {
            "label": "TASM 4.1",
            "description": "Borland's Turbo Assembler with tasm.exe 4.1 tlink.exe 7.1.30.1",
            "baseBundle": "/bundles/TASM.jsdos",
            "CodeLanguage": "asm6502",
            "CodePath": "code/hello.asm",
            "actions": [
                {
                    "label": "run",
                    "zh-cn": "运行代码",
                    "CodeDestination": "test/test.asm",
                    "command": [
                        "mount c ./",
                        "mount d ./test/",
                        "set PATH=C:\\tasm;%PATH%",
                        "d:",
                        "tasm test.asm;",
                        "tlink test.obj;",
                        "test.exe"
                    ]
                },
                {
                    "label": "debug",
                    "zh-cn": "使用TD调试",
                    "CodeDestination": "test/test.asm",
                    "command": [
                        "mount c ./",
                        "mount d ./test/",
                        "set PATH=C:\\tasm;%PATH%",
                        "d:",
                        "tasm /zi test.asm",
                        "tlink /v/3 test.obj",
                        "TD test.exe"
                    ]
                },
                {
                    "label": "list",
                    "zh-cn": "生成lst文件",
                    "CodeDestination": "test/test.asm",
                    "command": [
                        "mount c ./",
                        "mount d ./test/",
                        "set PATH=C:\\tasm;%PATH%",
                        "d:",
                        "tasm /la test.asm;"
                    ]
                }
            ]
        }
    ]
}